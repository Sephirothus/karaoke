<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView" android:layout_alignParentTop="true"
            android:src="@drawable/music" android:layout_above="@+id/listView"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:id="@+id/listView" android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
</RelativeLayout>

